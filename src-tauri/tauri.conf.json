{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AxisOS",
  "version": "0.1.0",
  "identifier": "jp.nexspace.axisos",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AxisOS",
        "width": 960,
        "height": 600,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "fullscreen": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "2025 NEXSPACE",
    "category": "Productivity"
  }
}